# danger: you can turnoff steamdeck's read-only system image by
# sudo steamos-readonly disable

install() {
  echo "Do you want to install ${1}"
  select yn in "Y" "N"; do
    case $yn in
      "Y") flatpak install -y flathub $1; break;;
      "N") break;;
    esac
  done
}

